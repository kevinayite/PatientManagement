@page
@model FinalProject.Pages.Receptionist.CreateModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-white shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">New patient</h2>
                </div>
                <div class="card-body">
                    @if (Model.errorMessage.Length > 0)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>@Model.errorMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                        </div>
                    }

                    <form method="POST" enctype="multipart/form-data">
                        @* <input type="hidden" name="id" value="@Model.patientInfo.id" /> *@

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Phone number</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="phoneNumber" value="@Model.patientInfo.phoneNumber" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Names</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="names" value="@Model.patientInfo.names" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Date of birth</label>
                            <div class="col-sm-6">
                                 <input type="date" class="form-control" name="dob" value="@Model.patientInfo.dob" />
                                @* <textarea class="form-control" id="examDesc" name="examDesc">@Model.patientInfo.dob</textarea *@
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Address</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="address" value="@Model.patientInfo.address" />
                            </div>
                        </div>
                        @if (Model.successMessage.Length > 0)
                        {
                            <div class="row mb-3">
                                <div class="col-sm-9">
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>@Model.successMessage</strong>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="row mb-3">
                            <div class="offset-sm-3 col-sm-3 d-grid">
                                <button type="submit" class="btn btn-success" href="/Receptionist/create">Submit</button>
                            </div>
                            <div class="offset-sm-3 col-sm-3 d-grid">
                                <a class="btn btn-outline-secondary" role="button" href="/Receptionist/index">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateResultField(input) {
        if (input.files && input.files[0]) {
            var filename = input.files[0].name;
            document.getElementById('result').value = filename;
        }
    }
</script>
