@page
@model GroupFourDotNet.Pages.Employee.CreateModel

@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-white shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">New Employee</h2>
                </div>
                <div class="card-body">
                    @if (Model.errorMessage.Length > 0)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>@Model.errorMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="POST">
                        <div class="mb-3">
                            <label class="form-label">Names of the Employee</label>
                            <input type="text" class="form-control" name="names" value="@Model.employeeInfo.names">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Service</label>
                            <select class="form-select" name="serviceId">
                                <option value="">Select the corresponding service</option>
                                @foreach (var service in Model.servicesList)
                                {
                                    <option value="@service.id">@service.type</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" class="form-control" name="phone" value="@Model.employeeInfo.phoneNumber">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" class="form-control" name="pwd" value="@Model.employeeInfo.pwd">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role of the Employee</label>
                            <input type="text" class="form-control" name="serviceProvided" value="@Model.employeeInfo.serviceProvided">
                        </div>

                        @if (Model.successMessage.Length > 0)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>@Model.successMessage</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Submit</button>
                            <a class="btn btn-outline-secondary" href="/Employee/Index" role="button">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>