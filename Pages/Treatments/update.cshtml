@page
@model FinalProject.Pages.Treatments.updateModel

@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-white shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Update Treatment</h2>
                </div>
                <div class="card-body">
                    @if (Model.errorMessage.Length > 0)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong>@Model.errorMessage</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                        </div>
                    }

                    <form method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="@Model.treatmentInfo.id" />

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Patient Code</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="patientCode" value="@Model.treatmentInfo.patientCode" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Service Id</label>
                            <div class="col-sm-6">
                                <input type="text" class="form-control" name="serviceId" value="@Model.treatmentInfo.serviceId" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Exam Description</label>
                            <div class="col-sm-6">
                               @*  <input type="text" class="form-control" name="examDesc" value="@Model.treatmentInfo.examDesc" /> *@
                                <textarea class="form-control" id="examDesc" name="examDesc">@Model.treatmentInfo.examDesc</textarea>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Result</label>
                            <div class="col-sm-6">
                                <textarea class="form-control" id="result" name="result">@Model.treatmentInfo.result</textarea>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-3 col-form-label">Upload Image</label>
                            <div class="col-sm-6">
                                <input type="file" class="form-control-file" id="imageFile" name="imageFile" accept="image/*" onchange="updateResultField(this)" />
                            </div>
                        </div>

                        @if (Model.successMessage.Length > 0)
                        {
                            <div class="row mb-3">
                                <div class="col-sm-9">
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <strong>@Model.successMessage</strong>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.treatmentInfo.ImagePath))
                        {
                            <img src="@Model.treatmentInfo.ImagePath" alt="Uploaded Image" />
                        }
                        else
                        {
                            <p>No image uploaded.</p>
                        }

                        <div class="row mb-3">
                            <div class="offset-sm-3 col-sm-3 d-grid">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                            <div class="offset-sm-3 col-sm-3 d-grid">
                                <a class="btn btn-outline-secondary" href="/Doctor" role="button">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateResultField(input) {
        if (input.files && input.files[0]) {
            var filename = input.files[0].name;
            document.getElementById('result').value = filename;
        }
    }
</script>